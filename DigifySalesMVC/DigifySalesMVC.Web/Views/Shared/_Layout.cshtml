<!DOCTYPE html>
<html>
<head class="no-js">
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/layout.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
</head>
<body>
    <div id="header">
        <div id="logo">
            <h1>
                DigifySales.com</h1>
            <h2>
                Mark Stewart</h2>
        </div>
        <!-- end #logo -->
        <div id="menu">
            <ul>
                <li class="first">@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Products & Services", "Index", "ProductsAndServices")</li>
                <li>@Html.ActionLink("About Us", "Index", "About")</li>
                <li>@Html.ActionLink("Contact Us", "Index", "Contact")</li>
                <li>@Html.ActionLink("Hardware Recommendations", "Index", "Hardware")</li>
            </ul>
        </div>
        <!-- end #menu -->
    </div>
    <!-- end #header -->
    <div id="page">
        <div id="content">
            @RenderBody()
        </div>
        <!-- end #content -->
        <div id="sidebar">
            <div id="box4">
                <div class="bgtop">
                    <div class="bgbtm">
                        <h2>
                            News</h2>
                        <p>
                            2011 Digify becomes the master distributer for WheresMyMedia<br />
                            2011 Digify becomes the distributer for Dektec<br />
                            2011 Digify LLC is founded<br />
                            2009 Mark Stewart Becomes the distributer for Digimetrics
                        </p>
                        <br style="clear: both;" />
                    </div>
                </div>
            </div>
            <!-- end #box4 -->
            <div id="box5">
                <div class="bgright">
                    <h2>
                        Partners</h2>
                    <ul class="list1">
                        <li><a href="http://www.dektec.com">Dektec</a></li>
                        <li><a href="http://www.digi-metrics.com">Digimetrics</a></li>
                        <li><a href="http://www.wheresmymedia.com">WheresMyMedia</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- end #sidebar -->
        <div style="clear: both;">
            <!-- # -->
        </div>
    </div>
    <!-- end #page -->
    <div id="footer">
        <p>
            Copyright &copy @DateTime.Now.Year DigifySales.com. All rights reserved.</p>
    </div>
    <!-- end #footer -->
</body>
</html>
